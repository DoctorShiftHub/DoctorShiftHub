// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}
model Post {
    id      String @id @default(cuid())
    title   String
    content String
}

model User {
  id        String    @id @default(cuid())
  id_clerk  String    @unique
  duties    Schedule?
  coins     Int
  purchasesHistoric PurchasesHistoric[]
  admin    Boolean
  expertise String
}

model Schedule {
    id                   String @id @default(cuid())
    dutyStartDateTime    DateTime
    dutyEndDateTime      DateTime
    ownerId              String @unique
    owner                User @relation(fields: [ownerId], references: [id])
    Locale               Locale?  
    announcements        Announcement[]
}
model Announcement {
    id      String @id @default(cuid())
    startDateTime        DateTime
    endDateTime          DateTime
    dutyType             String
    price                Float
    locale               Locale? 
    premiunAnnouncement  Boolean
    isAvailable          Boolean
    scheduleId           String
    schedule             Schedule @relation(fields: [scheduleId], references: [id])
    @@index([scheduleId])
}

model Locale {
    id      String @id @default(cuid())
    name    String
    address String
    city    String
    state   String
    latitute Float
    longitude Float
    scheduleId  String @unique
    schedule    Schedule @relation(fields: [scheduleId], references: [id])
    announcementId String? @unique
    announcements Announcement? @relation (fields: [announcementId], references: [id])
}

model PurchasesHistoric {
    id      String @id @default(cuid())
    userId  String
    user    User @relation(fields: [userId], references: [id])
    coins   Int
    date    DateTime

    @@index([userId])
}